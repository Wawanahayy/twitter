# ========== LOG & GLOBAL ==========
LOG_LEVEL=silent    # satu saja, buat semua modul
DRY_RUN=0          # 0 = aksi nyata, 1 = simulasi/log-only

# ========== X QUESTS (bindX.mjs) ==========
AUTH_API_URL=""
AUTH_API_COOKIE=""
REDIRECT_HOST="snag-render.com"
# AUTHORIZE_URL bisa dikosongin (auto dari AUTH_API_URL)
# AUTHORIZE_URL="https://x.com/i/oauth2/authorize?..."

# ========== X SESSION (dipakai x-auth.mjs & x-tasks.mjs) ==========
ACCOUNT=x.txt

# target tweet buat reply / quote
TARGET=
FOLLOW=follow.txt
COMMENT=address.txt
POST=posts.txt
QUOTE=quotes.txt
DO_LIKE=1
DO_RETWEET=1
DO_BOOKMARK=0
DO_FOLLOW=1

# X_TASKS_FILE= opsional

# User Agent dipakai SEMUA modul X (auth + tasks)
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/142.0.0.0 Safari/537.36"
SLEEP_AFTER_ACTION_MS=1500
COOLDOWN_EVERY=1
COOLDOWN_MS=1250
STOP_ON_RATE_LIMIT=true   # kalau mau, bisa diganti false nanti


# ========== DISCORD BOT / QUESTS ==========
DISCORD_TOKEN="mfa.xxxxxxx"
DISCORD_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
HEADLESS="true"

USE_PPTR=1
PPTR_SLOWMO=2500          
PPTR_TIMEOUT=25000
PPTR_HEADLESS=1
BIND_FORCE_PPTR=1

# SCAN WEBSITE

SCAN_COOKIE=

# DOCS
# URL Google Sheets (boleh pakai langsung link yang kamu kirim)
DOCS_URL="https://docs.google.com/spreadsheets/d/10jIWSs5DfnFOYis3izoE9-7NQWzG3MKeDiWfGBJEnfc"

# Nama file berisi address-address yang mau dicek (1 address per baris)
WALLETS_FILE="address.txt"

# Nama header kolom yang berisi wallet di sheet (case-insensitive)
# Misal header di row pertama: "Wallet", "Address", "Wallets", dll
WALLET_COLUMN_HEADER="Wallets"
